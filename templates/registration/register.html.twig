{% block body %}
    <div style="background-color: green; height: 100vh; display: flex; align-items: center; justify-content: center;">
        <div style="width: 400px; padding: 20px; background-color: white; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
            <h1 style="text-align: center;">Register</h1>

            {{ form_errors(registration1Form) }}

            {{ form_start(registration1Form) }}
                <div style="margin-bottom: 15px;">
                    {{ form_row(registration1Form.email) }}
                </div>
                <div style="margin-bottom: 15px;">
                    {{ form_row(registration1Form.plainPassword, {
                        label: 'Password'
                    }) }}
                </div>
                <div style="margin-bottom: 15px;">
                    {{ form_row(registration1Form.role) }}
                </div>
                <div style="margin-bottom: 15px;">
                    {{ form_row(registration1Form.agreeTerms) }}
                </div>

                <div style="text-align: center;">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            {{ form_end(registration1Form) }}
        </div>
    </div>
    
{% endblock %}




